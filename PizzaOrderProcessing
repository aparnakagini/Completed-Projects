    private void btnCalculateActionPerformed(java.awt.event.ActionEvent evt) {                                            
       
        // variables required in the program
        double margherita, TotalMargherita;
        int AmountMargherita;
 
        double hawaiian, TotalHawaiian;
        int AmountHawaiian;
   
        double veggie, TotalVeggie;
        int AmountVeggie;
   
        double MeatLovers, TotalMeatLovers;
        int AmountMeatLovers;
       
        double dessert, TotalDessert;
        int AmountDessert;
       
        double subtotal, tax, TotalTax, GrandTotal;
       
        // assigning values for some of the variables
        margherita = 12.99;
        hawaiian = 13.99;
        veggie = 13.99;
        MeatLovers = 15.99;
        dessert = 15.99;
        tax = 0.13;
       
        // obtaining the number of slices for each pizza the user wants to purchase
        AmountMargherita = Integer.parseInt(txtMargherita.getText());
        AmountHawaiian = Integer.parseInt(txtHawaiian.getText());
        AmountVeggie = Integer.parseInt(txtVeggie.getText());
        AmountMeatLovers = Integer.parseInt(txtMeatLovers.getText());
        AmountDessert = Integer.parseInt(txtDessert.getText());
       
        // calculating the total cost per pizza the user purchased
        TotalMargherita = margherita * AmountMargherita;
        TotalHawaiian = hawaiian * AmountHawaiian;
        TotalVeggie = veggie * AmountVeggie;
        TotalMeatLovers = MeatLovers * AmountMeatLovers;
        TotalDessert = dessert * AmountDessert;
       
        subtotal = TotalMargherita + TotalHawaiian + TotalVeggie + TotalMeatLovers + TotalDessert;
        // rounding the subtotal amount to two decimal places
        subtotal = subtotal * 100;
        subtotal = Math.round(subtotal);
        subtotal = subtotal/100;
        // displaying the subtotal amount to the user
        lblSubtotalAmount.setText(String.valueOf(subtotal));

        TotalTax = subtotal * tax;
        // rounding the total tax amount to two decimal places
        TotalTax = TotalTax * 100;
        TotalTax = Math.round(TotalTax);
        TotalTax = TotalTax/100;
        // displaying the total tax amount to the user
        lblTaxAmount.setText(String.valueOf(TotalTax));
       
        GrandTotal = TotalTax + subtotal;
        // rounding the grand total amount to two decimal places
        GrandTotal = GrandTotal * 100;
        GrandTotal = Math.round(GrandTotal);
        GrandTotal = GrandTotal/100;
        // displaying the grand total amount to the user
        lblGTotalAmount.setText(String.valueOf(GrandTotal));

    }                                            

