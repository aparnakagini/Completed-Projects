    private void btnCalculateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCalculateActionPerformed
       
    String amountIn = "0"; // the currency
        int total, quarters, dimes, nickels, pennies, loonies, toonies, pointIndex, max = 10000;
        double convertIn = 0.0;
        boolean correctInput = true;
        int decimalPoints = 0;
        amountIn = txtCurrency.getText();
        boolean mainRun = true;
       
        try
        {
        convertIn = Double.parseDouble(amountIn) * 100;
        total = (int) convertIn;
       
        }
        catch(java.lang.NumberFormatException ex)
        {
        txtAmount.setText("Invalid input.");
        correctInput = false;
        }
       
        convertIn = Double.parseDouble(amountIn) * 100;
total = (int) convertIn;

if ((total < 0) && (correctInput)) {
txtAmount.setText("Enter an input greater than 0.");
mainRun = false;
}
if (total > max) {
txtAmount.setText("Maximum amount is "+ max);
correctInput = false;
total = (int) convertIn;
}

pointIndex = amountIn.indexOf('.');

if (pointIndex != -1) {
decimalPoints = amountIn.length() - pointIndex - 1;
}

if ((decimalPoints > 2) && (total >= 0)) {
txtAmount.setText("Incorrect format.");
correctInput = false;
}
       
        if ((mainRun) && (correctInput))
        {
        toonies = total / 200;
total -= (toonies*200);
loonies = total / 100;
total -= (loonies*100);
quarters = total / 25;
total -= (quarters*25);
dimes = total/10;        
total -= (dimes *10);
nickels = total/5;
total -= (nickels * 5);
pennies = total/1;
total -= pennies;
       txtLoonies.setText(Integer.toString(loonies));
       txtToonies.setText(Integer.toString(toonies));
       txtQuarters.setText(Integer.toString(quarters));
       txtDimes.setText(Integer.toString(dimes));
       txtNickels.setText(Integer.toString(nickels));
       txtPennies.setText(Integer.toString(pennies));
        }
       
    }
       
    //GEN-LAST:event_btnCalculateActionPerformed

